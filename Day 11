<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        //Local Storage -> stores data permanently (until cleared by the user or code)
        //syntax:
        //localStorage.setItem("key","value");
        //localStorage.setItem("key");
        localStorage.setItem("username","akshaya");
        console.log(localStorage.getItem("username"));
        localStorage.clear();
        //storing arrays
        //Local Storage only stores strings,not arrays or objects.
        //we need to convert arrays/objects to string (using JSON.stringify) before storing.
        let programming=["java","python","c"];
        localStorage.setItem("programming",JSON.stringify(programming));
        let storededLang=JSON.parse(localStorage.getItem("programming"));
        console.log(storededLang);
        //14.3 - Storing an array of objects in Local Storage
        let persons=[
            {name:"akshaya"},
            {job:"developer"}
        ];
        localStorage.setItem("persons",JSON.stringify(persons));
        let arrobj=JSON.parse(localStorage.getItem("persons"));
        console.log(arrobj);
        //session storage 
        sessionStorage.setItem("fruits","apple");
        sessionStorage.getItem("fruits");
    </script>
</body>
</html>
